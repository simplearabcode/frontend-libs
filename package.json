{
  "name": "@simplearabcode/frontend-libs",
  "version": "1.0.0",
  "description": "Shared UI libraries and components for Simple Arab Code platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui.mjs",
      "require": "./dist/ui.js"
    },
    "./shared": {
      "types": "./dist/shared/index.d.ts",
      "import": "./dist/shared.mjs",
      "require": "./dist/shared.js"
    },
    "./shared/*": {
      "types": "./dist/shared/*/index.d.ts",
      "import": "./dist/shared.mjs",
      "require": "./dist/shared.js"
    },
    "./styles": "./dist/frontend-libs.css"
  },
  "typesVersions": {
    "*": {
      "shared": ["./dist/shared/index.d.ts"],
      "shared/config": ["./dist/shared/config/index.d.ts"],
      "shared/utils": ["./dist/shared/utils/index.d.ts"],
      "shared/hooks": ["./dist/shared/hooks/index.d.ts"],
      "shared/types": ["./dist/shared/types/index.d.ts"],
      "shared/constants": ["./dist/shared/constants/index.d.ts"],
      "shared/validators": ["./dist/shared/validators/index.d.ts"],
      "shared/contexts": ["./dist/shared/contexts/index.d.ts"],
      "shared/guards": ["./dist/shared/guards/index.d.ts"],
      "ui": ["./dist/ui/index.d.ts"]
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t simplearabcode/frontend-libs:latest .",
    "docker:run": "docker run -it simplearabcode/frontend-libs:latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simplearabcode/frontend-libs.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "@simplearabcode:registry": "https://npm.pkg.github.com"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "tailwindcss",
    "shadcn-ui",
    "design-system"
  ],
  "author": "Simple Arab Code",
  "license": "MIT",
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.546.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.24.1"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.1.12"
    }
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "jiti": "^2.4.2",
    "jsdom": "^25.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.15",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^4.0.0"
  }
}
