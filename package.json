{
  "name": "@simplearabcode/frontend-libs",
  "version": "1.0.0",
  "description": "Shared UI libraries and components for Simple Arab Code platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/styles/index.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t simplearabcode/frontend-libs:latest .",
    "docker:run": "docker run -it simplearabcode/frontend-libs:latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simplearabcode/frontend-libs.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "@simplearabcode:registry": "https://npm.pkg.github.com"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "tailwindcss",
    "shadcn-ui",
    "design-system"
  ],
  "author": "Simple Arab Code",
  "license": "MIT",
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.546.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.21",
    "jsdom": "^25.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.15",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^2.1.8"
  }
}
